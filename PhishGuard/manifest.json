{
  "manifest_version": 3,
  "name": "PhishEye â€” Real-Time Fake Login Page Detector",
  "version": "1.0.1",
  "description": "Heuristic client-side phishing detector for login pages. Analysis performed locally; no page content is sent to external servers by default.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "PhishEye",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon16.png",
        "icons/icon48.png",
        "icons/icon128.png"
      ],
      "matches": ["*://*/*"]
    }
  ]
} 